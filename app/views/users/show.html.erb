<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'shared/links', collection: @user.links %>
      <br>
      <%if current_user?(@user) %>
        <%= render 'shared/link', :linkable => @user, :link => @user.links.build %>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.fables.any? %>
      <h3>Fables (<%= @user.fables.count %>)</h3>
      <ol class="fables">
        <%= render @fables %>
      </ol>
      <%= will_paginate @fables %>
    <% end %>
  </div>
</div>
